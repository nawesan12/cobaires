<header class="w-full py-11 lg:py-20 z-50">
    <!-- Main Header Bar -->
    <div
        class="lg:max-w-7xl w-full mx-auto flex items-center justify-between px-4 sm:px-6 lg:px-0 py-4"
    >
        <!-- Logo -->
        <div class="flex items-center">
            <a
                href="/"
                class="text-2xl font-bold text-gray-800 hover:text-indigo-600 transition-colors"
            >
                <img src="/iso-white.png" alt="" />
            </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="flex items-center">
            <a
                href="/"
                class="text-2xl font-bold text-gray-800 hidden md:block lg:block hover:text-indigo-600 transition-colors"
            >
                <img src="/logo-white.png" alt="" />
            </a>
        </div>

        <!-- Mobile Menu Button (Hamburger) -->
        <div class="md:hidden">
            <button
                id="mobile-menu-open-button"
                class="text-gray-800 hover:text-indigo-600 focus:outline-none"
            >
                <span class="sr-only">Open main menu</span>
                <svg
                    class="h-6 w-6"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16m-7 6h7"></path>
                </svg>
            </button>
        </div>
    </div>

    <!--
    Fullscreen Mobile Menu Overlay
    - `fixed inset-0`: Makes it cover the entire screen.
    - `bg-white/95 backdrop-blur-sm`: A slightly transparent white background with a blur effect.
    - `z-40`: Positions it just below the main header bar (z-50).
    - `flex items-center justify-center`: Centers the navigation links vertically and horizontally.
    - `transform transition-transform...`: Handles the animation.
    - `translate-x-full`: Hides the menu off-screen to the right by default.
    - `data-open="false"`: A data attribute to track the state, initially closed.
  -->
    <div
        id="mobile-menu-overlay"
        class="fixed inset-0 bg-white/95 backdrop-blur-sm z-40 flex items-center justify-center transform transition-transform duration-300 ease-in-out translate-x-full"
        data-open="false"
    >
        <!-- Close Button (X) -->
        <button
            id="mobile-menu-close-button"
            class="absolute top-6 right-5 sm:right-7 text-gray-800 hover:text-indigo-600 focus:outline-none"
        >
            <span class="sr-only">Close menu</span>
            <svg
                class="h-8 w-8"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <!-- Mobile Navigation Links -->
        <nav class="flex flex-col items-center space-y-8">
            <a
                href="#"
                class="text-3xl text-gray-800 hover:text-indigo-600 font-medium transition-colors"
                >Inicio</a
            >
            <a
                href="#"
                class="text-3xl text-gray-800 hover:text-indigo-600 font-medium transition-colors"
                >Nosotros</a
            >
            <a
                href="#"
                class="text-3xl text-gray-800 hover:text-indigo-600 font-medium transition-colors"
                >Proyectos</a
            >
            <a
                href="#"
                class="text-3xl text-gray-800 hover:text-indigo-600 font-medium transition-colors"
                >Servicios</a
            >
            <a
                href="#"
                class="text-3xl text-gray-800 hover:text-indigo-600 font-medium transition-colors"
                >Contacto</a
            >
        </nav>
    </div>
</header>

<script>
    // This script runs on the client to handle menu interactions.
    const openButton = document.getElementById("mobile-menu-open-button");
    const closeButton = document.getElementById("mobile-menu-close-button");
    const overlay = document.getElementById("mobile-menu-overlay");

    // Function to open the menu
    const openMenu = () => {
        if (overlay) {
            // Move the overlay into view
            overlay.classList.remove("translate-x-full");
            // Prevent scrolling of the background content
            document.body.classList.add("overflow-hidden");
        }
    };

    // Function to close the menu
    const closeMenu = () => {
        if (overlay) {
            // Move the overlay out of view
            overlay.classList.add("translate-x-full");
            // Restore scrolling of the background content
            document.body.classList.remove("overflow-hidden");
        }
    };

    // Event Listeners
    openButton?.addEventListener("click", openMenu);
    closeButton?.addEventListener("click", closeMenu);

    // Optional: Close menu when a link is clicked
    overlay?.querySelectorAll("a").forEach((link) => {
        link.addEventListener("click", closeMenu);
    });
</script>
