---
import Header from "../components/sections/Nosotros/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout>
    <Header />

    <section
        class="max-w-7xl lg:px-0 px-4 mx-auto grid gap-8 md:gap-10 grid-cols-1 md:grid-cols-2 lg:grid-cols-3"
    >
        <!-- Article 1 -->
        <article
            class="group relative w-full h-96 rounded-2xl overflow-hidden shadow-lg cursor-pointer"
        >
            <!-- Background Image Container -->
            <!-- The image is slightly zoomed in (scale-110) by default. -->
            <!-- On hover (group-hover), it zooms out to its normal size (scale-100). -->
            <div
                class="absolute inset-0 bg-cover bg-center transition-transform duration-500 ease-in-out scale-110 group-hover:scale-100"
                style="background-image: url('https://picsum.photos/seed/1/1920/1080')"
            >
            </div>
            <!-- Overlay Div -->
            <!-- It's positioned at the bottom, 1/3 of the height. -->
            <!-- It's hidden by default (opacity-0 and translated down). -->
            <!-- On hover (group-hover), it becomes visible and slides up. -->
            <div
                class="absolute bottom-0 left-0 w-full h-1/3 bg-gradient-to-t from-black/80 to-transparent p-6 flex flex-col justify-end
                                     opacity-0 translate-y-8 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-500 ease-in-out"
            >
                <h3 class="text-white text-2xl font-bold">Educacion y Salud</h3>
                <p class="text-white/80 text-sm mt-1">
                    Un espacio diseñado para el cuidado y la recuperación.
                </p>
            </div>
        </article>

